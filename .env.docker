# Docker Environment Configuration
# Copy this to .env when using Docker

APP_NAME=ScreenSense
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8888

# Docker port mappings (HOST ports - externally accessible)
APP_PORT=8888
FRONTEND_PORT=3333
DOCKER_DB_PORT=3307
DOCKER_REDIS_PORT=6380

# Database (Docker service name as host)
DB_CONNECTION=mariadb
DB_HOST=db
DB_PORT=3306
DB_DATABASE=screensense
DB_USERNAME=screensense
DB_PASSWORD=secret

# Redis (Docker service name as host)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session & Cache
SESSION_DRIVER=redis
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# Filesystem
FILESYSTEM_DISK=public

# FFmpeg (installed in container)
FFMPEG_BINARIES=/usr/bin/ffmpeg
FFPROBE_BINARIES=/usr/bin/ffprobe

# Frontend URL
FRONTEND_URL=http://localhost:3333

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8888/api/auth/google/callback

# Polar.sh Subscription (optional)
POLAR_API_KEY=
POLAR_ORGANIZATION_ID=
POLAR_PRODUCT_ID_MONTHLY=
POLAR_PRODUCT_ID_YEARLY=
POLAR_WEBHOOK_SECRET=
POLAR_ENVIRONMENT=sandbox
