APP_NAME=ScreenSense
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# For Docker: use DB_HOST=db
# For Local: use DB_HOST=127.0.0.1
DB_CONNECTION=mariadb
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=screensense
DB_USERNAME=root
DB_PASSWORD=

# Session & Cache
# For Docker: use redis
# For Local: use database
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
# For Docker: use REDIS_HOST=redis
# For Local: use REDIS_HOST=127.0.0.1
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# FFmpeg paths for video processing
# macOS (Homebrew): /opt/homebrew/bin/ffmpeg
# Linux: /usr/bin/ffmpeg
# Docker: /usr/bin/ffmpeg
FFMPEG_BINARIES=/opt/homebrew/bin/ffmpeg
FFPROBE_BINARIES=/opt/homebrew/bin/ffprobe

# Google OAuth (Optional)
# Create your own credentials at: https://console.cloud.google.com/apis/credentials
# See GOOGLE_AUTH_SETUP.md for detailed instructions
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Frontend URL (for redirects after auth)
# For Docker: http://localhost:3333
# For Local: http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Polar.sh Subscription Configuration (Optional)
# Get these from https://polar.sh dashboard
POLAR_API_KEY=
POLAR_ORGANIZATION_ID=
POLAR_PRODUCT_ID_MONTHLY=
POLAR_PRODUCT_ID_YEARLY=
POLAR_WEBHOOK_SECRET=
POLAR_ENVIRONMENT=sandbox

# Timezone
TIMEZONE=UTC

# Docker port mappings (only needed when using Docker)
# These are HOST ports - change if you have conflicts
APP_PORT=8888
FRONTEND_PORT=3333
DOCKER_DB_PORT=3307
DOCKER_REDIS_PORT=6380
